<!DOCTYPE html>
<html>
  <head>
    <title>Aermotion</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://unpkg.com/cloudinary-video-player/dist/cld-video-player.min.css" rel="stylesheet">

    <script src="https://unpkg.com/cloudinary-core/cloudinary-core-shrinkwrap.min.js" type="text/javascript"></script>
    <script src="https://unpkg.com/cloudinary-video-player/dist/cld-video-player.min.js" type="text/javascript"></script>
  </head>

  <body>
    <%= render 'aplication/navbar' %>
    <% unless params[:controller] == 'home' %>
      <div class="spacer"></div>
    <% end %>
    <p class="notice" style="display: <%= "none" unless notice %>;"><%= notice %></p>
    <p class="alert" style="display: <%= "none" unless notice %>;"><%= alert %></p>
    <%= yield %>
    <%= render 'aplication/footer' %>
  </body>
</html>
