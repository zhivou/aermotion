<%= stylesheet_link_tag "home" %>
<% @page_title = @site_defaults.where(key: 'home_page_html_title').first.value %>
<% @seo_keywords = @seo_keywords + ', ' + @site_defaults.where(key: 'workouts_page_html_keys').first.value %>

<div class="d-flex picHolder text-center sliderWrapper parallax-window full-height" data-parallax="scroll" data-image-src="<%= asset_path "misha_cover2.jpg" %>">
  <div class="container align-self-center p-2 bd-highlight white slogan-wrapper">
    <h1 class="display-2 text-center slogan-text text-break"><b>Aerobic</b> Calisthenics Fitness Guide</h1>
    <h1 class="text-center slogan-text text-break">Skills progressions</h1>
    <h1 class="text-center slogan-text text-break">Effective specific muscle conditioning workout programs</h1>
  </div>
</div>

<div class="text-center bg-darker text-light">
  <div class="col-12">
    <%= render "aplication/show_free_videos" %>
  </div>
</div>

<% if !user_signed_in? %>
  <a class="btn btn-dark btn-lg btn-block shadow-lg" href="/register">FREE REGISTRATION</a>
<% end %>

<div class="jumbotron jumbotron-fluid bg-dark">
  <div class="container p-2 bd-highlight white">
    <h1 class="text-left display-2 slogan-text text-break"><%= @site_defaults.where(key: 'home_page_introduction_video_title').first.value %></h1>
    <h1 class="text-left slogan-text text-break"><%= @site_defaults.where(key: 'home_page_introduction_video_sub_title').first.value %></h1>
  </div>
</div>

<div class="container p-0">
  <div class="embed-responsive embed-responsive-16by9">
    <iframe src="<%= @site_defaults.where(key: 'home_page_introduction_video_url').first.value %>?rel=0&amp;autoplay=1&mute=1" frameborder="0"></iframe>
  </div>
  <script src="https://apis.google.com/js/platform.js"></script>

  <div class="g-ytsubscribe" data-channelid="UCCLbyOtcz4QphYXfZIEQPpQ" data-layout="full" data-theme="dark" data-count="default"></div>
</div>

<div class="jumbotron jumbotron-fluid bg-dark">
  <div class="container align-self-center p-2 bd-highlight white">
    <h1 class="display-2 text-left slogan-text text-break"><%= @site_defaults.where(key: 'home_page_workouts_title').first.value %></h1>
    <h1 class="text-left slogan-text text-break"><%= @site_defaults.where(key: 'home_page_workouts_sub_title').first.value %></h1>
  </div>
</div>

<div class="container container-fluid">
  <div class="row justify-content-center">
    <% unless @workout_sets.nil? %>
      <% @workout_sets.each do |t| %>
        <div class="col-12 col-md-4 p-0 container container-fluid">
          <a class="card shadow card-holder" style="max-height: 300px; overflow: hidden;" href="/workout_sets/<%= t.id %>">

            <%= image_tag t.main_image.variant(resize: '600'), alt: "w.id", class: 'card-img-top'%>

            <div class="exercise-card-overlay card-img-overlay-gradient">
            </div>

            <div class="card-img-overlay p-3 mb-0">
              <h5 class="text-white mb-0"><%= t.title %></h5>
              <small class="text-white">Includes <%= t.media.count %> videos</small>
            </div>
          </a>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="text-center">
    <a class="btn btn-dark btn-lg shadow-lg px-5 my-3" href="/workout_sets">VIEW ALL WORKOUTS</a>
  </div>
</div>

<div class="jumbotron jumbotron-fluid bg-dark">
  <div class="container align-self-center p-2 bd-highlight white">
    <h1 class="display-2 text-left slogan-text text-break"><%= @site_defaults.where(key: 'home_page_tutorials_title').first.value %></h1>
    <h1 class="text-left slogan-text text-break"><%= @site_defaults.where(key: 'home_page_tutorials_sub_title').first.value %></h1>
  </div>
</div>

<div class="container container-fluid">
  <div class="row justify-content-center">
    <% unless @tutorials.nil? %>
      <% @tutorials.each do |t| %>
        <div class="col-12 col-md-4 p-0">
          <a class="card shadow card-holder" style="max-height: 300px; border: 0; overflow: hidden;" href="/workout_sets/<%= t.id %>">

            <%= image_tag t.main_image.variant(resize: '600'), alt: "w.id", class: 'card-img-top'%>

            <div class="exercise-card-overlay card-img-overlay-gradient">
            </div>

            <div class="card-img-overlay p-3 mb-0">
              <h5 class="text-white mb-0"><%= t.title %></h5>
              <small class="text-white">Includes <%= t.media.count %> videos</small>
            </div>
          </a>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="text-center">
    <a class="btn btn-dark btn-lg shadow-lg px-5 my-3" href="/tutorials">VIEW ALL TUTORIALS</a>
  </div>
</div>

<div class="jumbotron jumbotron-fluid bg-dark">
  <div class="container align-self-center p-2 bd-highlight white">
    <h1 class="display-2 text-left slogan-text text-break"><%= @site_defaults.where(key: 'home_page_blogs_title').first.value %></h1>
    <br>
    <h1 class="text-left slogan-text text-break"><%= @site_defaults.where(key: 'home_page_blogs_sub_title').first.value %></h1>
  </div>
</div>

<div class="container container-fluid">
  <%= render 'aplication/show_blogs' %>
</div>

<div class="jumbotron jumbotron-fluid bg-dark">
  <div class="container align-self-center p-2 bd-highlight white">
    <h1 class="text-left slogan-text text-break"><%= @site_defaults.where(key: 'home_page_contact_block').first.value %></h1>
    <div class="text-left">
      <a class="btn btn-dark btn-lg shadow-lg px-5 my-3" href="/contact_us">CONTACT ME</a>
    </div>
  </div>
</div>