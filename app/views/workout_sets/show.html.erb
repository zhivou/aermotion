<%= stylesheet_link_tag "workout_sets" %>

<section>
  <div class="container pt-4 pb-4">
    <div class="row p-3">
      <div class="col-8">
        â€‹<picture>
        <source srcset="" type="image/svg+xml">
        <%= image_tag @workout_set.main_image.variant(resize: "1800"), class:"img-fluid img-thumbnail"  %>
      </picture>
        <div class="mt-3">
          <h1><%= @workout_set.title %></h1>
          <div class="description-content"><%= @workout_set.description %></div>
        </div>
      </div>
      <div class="col-4">
        <div class="p-3">
          <%= image_tag 'paypal-logo.png', class: "img-fluid m-3" %>
          <a href="/transactions/<%= @workout_set.id %>" class="btn btn-success btn-lg btn-block m-3">BUY</a>
          <h1 class="text-center p-3">$<%= @workout_set.price %></h1>
          <div class="videos-count">
            <strong>Includes <%= @workout_set.media.count %> videos:</strong>
            <% @workout_set.media.each do |m| %>
              <div><%= m.title %></div>
            <% end %>
          </div>
          <hr>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="container text-center p-3">
  <%= link_to 'Back', workout_sets_path, class: "btn btn-light" %>
</div>

<div class="container">
  <div id="disqus_thread"></div>
</div>

<script>
  var disqus_config = function () {
    this.page.url = "https://aermotion.herokuapp.com/workout_sets/<%= @workout_set.id %>";
    this.page.identifier = "workout_set<%= @workout_set.id %>";
  };

  (function() {
    var d = document, s = d.createElement('script');
    s.src = 'https://skrdev.disqus.com/embed.js';
    s.setAttribute('data-timestamp', +new Date());
    (d.head || d.body).appendChild(s);
  })();
</script>
