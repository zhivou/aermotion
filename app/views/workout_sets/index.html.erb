<%= stylesheet_link_tag "workout_sets" %>

<div class="container">
  <div class="header-title">
    <h1>Workout Sets</h1>
    <h2>You can purchase sets below:</h2>
  </div>

  <div class="wrap">
    <% @workout_sets.each do |workout_set| %>
      <figure class="snip1492">
        <%= image_tag workout_set.main_image.variant(resize: "500"), alt: "sample85" %>
        <figcaption>
          <h3><%= workout_set.title %></h3>
          <p>All this modern technology just makes people try to do everything at once.</p>
          <div class="price">
            $<%= workout_set.price %>
          </div>
        </figcaption><i class="ion-plus-round"></i>
        <a href="/transactions/<%= workout_set.id %>"></a>
      </figure>
    <% end %>
  </div>


  <div class="navigation p-3">
    <%= link_to 'New Workout Set', new_workout_set_path, class: "admin-show" %>
    <br>
    <%= link_to 'Back', root_path %>
  </div>
</div>