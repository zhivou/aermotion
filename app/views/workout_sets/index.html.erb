<div class="container">
  <div class="header-title">
    <h1>Workout Sets</h1>
    <h2>You can purchase sets below:</h2>
  </div>

  <div>
    <% @workout_sets.each do |workout_set| %>
      <div class="p-3">
        <a href="/workout_sets/<%= workout_set.id %>">
          <%= image_tag workout_set.main_image.variant(resize: "500") %>
          <h3><%= workout_set.title %></h3>
          <small>Price: <%= workout_set.price %>$</small>
        </a>
        <a href="/transactions/<%= workout_set.id %>">Buy</a>
        <div class="navigation admin-show">
          <%= link_to 'Edit', edit_workout_set_path(workout_set) %>
          <%= link_to 'Destroy', workout_set, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="navigation p-3">
    <%= link_to 'New Workout Set', new_workout_set_path, class: "admin-show" %>
    <br>
    <%= link_to 'Back', root_path %>
  </div>
</div>