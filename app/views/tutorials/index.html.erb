<%= stylesheet_link_tag "workout_sets" %>
<% @page_title = @site_defaults.where(key: 'tutorials_page_html_title').first.value %>
<% @seo_keywords = @seo_keywords + ', ' + @site_defaults.where(key: 'tutorials_page_html_keys').first.value %>

<div class="">
  <div class="header-title">
    <h1><%= @site_defaults.where(key: 'tutorials_page_title').first.value %></h1>
    <h3><%= @site_defaults.where(key: 'tutorials_page_sub_title').first.value %></h3>
  </div>

  <div class="container p-0 mt-5">
    <div class="embed-responsive embed-responsive-16by9">
      <iframe src="<%= @site_defaults.where(key: 'tutorials_page_video_url').first.value %>?rel=0&amp;autoplay=1&mute=1" frameborder="0"></iframe>
    </div>
    <script src="https://apis.google.com/js/platform.js"></script>

    <div class="g-ytsubscribe" data-channelid="UCCLbyOtcz4QphYXfZIEQPpQ" data-layout="full" data-theme="dark" data-count="default"></div>

    <div class="card p-1 mt-2">
      <div class="card-body">
        <h4>
          <%= @site_defaults.where(key: 'tutorials_page_info_block').first.value %>
        </h4>
      </div>
    </div>
  </div>

  <div class="wrap">
    <div class="workout-center">
      <% unless @tutorials.nil? %>
        <% @tutorials.each do |t| %>
          <figure class="card snip1492">
            <%= image_tag t.main_image.variant(combine_options: { resize: '600^', resize_to_fill: [313, 200] }), alt: "sample85" %>
            <figcaption>
              <h3><%= t.title %></h3>
              <p><%= t.description.first(150) %></p>
              <div class="price">
                $<%= t.price %>
              </div>
            </figcaption><i class="ion-plus-round"></i>
            <%= link_to '', workout_set_path(t) %>
          </figure>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<div class="jumbotron jumbotron-fluid mb-0">
  <div class="container p-5">
    <h1 class="display-4">Have Any Questions?</h1>
    <p class="lead">Please contact me. Contrary to popular belief, Lorem Ipsum is not simply random text</p>
    <a href="/contact_us" class="btn btn-secondary">CONTACT US</a>
  </div>
</div>


