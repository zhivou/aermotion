<%= stylesheet_link_tag "blogs" %>

<section class="publicaciones-blog-home">
  <div class="container">
    <div class="">
      <h2>My  <b>Blog</b></h2>
      <h3>Check out the latest news, announcements, new video releases</h3>
      <div class="row-page row">
        <% @counter = 0 %>
        <% @blogs.each do |blog| %>
          <% if @counter == 0 %>
            <div class="col-page col-sm-8 col-md-6">
              <a href="/blogs/<%= blog.id %>" class="black fondo-publicacion-home">
                <div class="img-publicacion-principal-home">
                  <%= image_tag blog.main_image.variant(resize: "300x500") %>
                </div>
                <div class="contenido-publicacion-principal-home">
                  <h3><%= blog.title %></h3>
                  <p><%= blog.body_area.to_plain_text.first(150)%><span>...</span></p>
                </div>
                <div class="mascara-enlace-blog-home">
                  <span>Read More </span>
                </div>
              </a>
            </div>
            <% @counter +=1 %>
            <% @counter = 0 if @counter == 7 %>
            <% end %>
        <% end %>
      </div>
    </div>
  </div>
</section>