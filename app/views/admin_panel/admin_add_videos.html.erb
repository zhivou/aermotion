<%= stylesheet_link_tag "admin_panel" %>

<div class="container">
  <small>Total: <%= @videos.count %> video/s</small>
  <table>
    <thead>
    <tr class="admin-head">
      <th class="text-center">Title</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <% @videos.each do |v| %>
      <tr class="admin-row">
        <td><a href="/media/<%= v.id %>"><%= v.title %></a></td>
      </tr>
    <% end %>
  </table>
  <%= link_to "Add new Video", new_medium_path, class: "btn btn-success" %>
  <%= link_to "Back", admin_panel_path %>
</div>
